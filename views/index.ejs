  <script>


  var locationName;
  var lattitude;
  var longitude;
  var information;

  $('.Count').each(function () {
    $(this).prop('Counter', 0).animate({
      Counter: $(this).text()
    }, {
      duration: 3000,
      easing: 'swing',
      step: function (now) {
        $(this).text(Math.ceil(now));
      }
    });
  });

  function initMap() {
