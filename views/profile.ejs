function deleteFavorite(id) {
    $.ajax({
      type:"DELETE",
      url: "/favorites",
      data:{
        id: id
      },
      success: function(data){
        console.log("success");
        window.location = "/favorites"
      },
      error:function(err){
        console.log(err);
      }
  })
}
</script>
